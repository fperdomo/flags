<p id="notice"><%= notice %></p>

<h1>Empresas</h1>

<div class="row">
<div class=" col-lg-offset-4 col-lg-8">
  <%= link_to 'New Company', new_company_path, class:"btn btn-primary" %>
</div>
</div>

<div class="container">            
  <div style="margin-top:5px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <div class="panel panel-info">
     <table class="table">
      <thead>
        <tr>
          <th scope="col">Nombre</th>
          <th scope="col">Ver</th>
          <th scope="col">Editar</th>
          <th scope="col">Eliminar</th>
        </tr>
      </thead>
      <tbody>       
        <% @companies.each do |company| %>
        <tr>
          <td><%= company.name %></td>
          <td><%= link_to 'Ver', company %></td>
          <td><%= link_to 'Editar', edit_company_path(company) %></td>
          <td><%= link_to 'Borrar', company, method: :delete, data: { confirm: 'Seguro que desea borrar esta empresa?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

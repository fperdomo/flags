<div class="container">            
  <div style="margin-top:5px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <div class="panel panel-info">
      <div class="panel-heading">
        <div class="panel-title">Datos de empresa</div>
      </div>  
      <div class="panel-body" >
        <%= form_with(model: company, local: true,  html: {class: 'form-horizontal'}) do |form| %>
        <% if company.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(company.errors.count, "error") %> prohibited this company from being saved:</h2>

          <ul>
            <% company.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
        <% end %>
        <div class="form-group">
          <label for="email" class="col-md-3 control-label">Nombre</label>
          <div class="col-md-9">             
            <%= form.text_field :name, class:"form-control" %>
          </div>
        </div>

        <div class="form-group">
          <!-- Button -->                                        
          <div class="col-md-offset-3 col-md-9">
            <%= form.submit "Crear", class:"btn be-green gray" %>
          </div>
        </div>
        
        <% end %>
      </div>
    </div>
  </div>
</div>